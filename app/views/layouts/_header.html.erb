<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
 	<div class="container">
 		<%= link_to "大童CRM", '#', id: "logo" %>
		<nav>
			<ul class="nav pull-right">
                <% if signed_in? %>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name + ":" + current_user.mobile_phone %><b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><%= link_to "资料", current_user %></li>
                            <li><%= link_to "设置", edit_user_path(current_user) %></li>
                            <li class="divider"></li>
                            <li><%= link_to "注销", signout_path, method: "delete" %></li>
                        </ul>
                    </li>
                    <li><%= link_to "任务", user_tasks_path(current_user) %></li> 
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">客户<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><%= link_to "客户列表", customers_path %></li>
                            <li><%= link_to "新客户", new_customer_path %></li>
                        </ul>
                    </li>

                    <% if current_user.admin? %>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">管理员<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><%= link_to "所有用户", users_path %></li>
                            <li><%= link_to "所有客户", customers_path %></li>
                        </ul>
                    </li>
                    <% end %>

                <% else %>
                    <li><%= link_to "登录", signin_path %></li>
                <% end %>
				<li><%= link_to "帮助", help_path %></li>
			</ul>
		</nav>
 	</div>
  </div>
 </header>
