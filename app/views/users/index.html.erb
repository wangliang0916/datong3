<% provide(:title, "所有用户") %>
<h1>所有用户</h1>
<%= form_for(:search, url: search_users_path, method: 'get' , class: "form-inline")  do |f|  %>
      <%= f.search_field :name, placeholder:"请输入客户姓名（汉字或拼音首字母）", value: @name %>
      <%= f.submit "查询", class: "btn btn-primary" %>
<% end %>

<%= will_paginate %>

<table class="table table-striped">
  <caption>共有<%= @users.count %>个用户</caption>
  <thead>
    <tr>
      <th>姓名</th>
      <th>手机号码</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<%= will_paginate %>
