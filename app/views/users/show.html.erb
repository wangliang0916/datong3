<% provide(:title, @user.name) %>
<h1>用户资料</h1>
<table>
  <tr>
    <td class="span2"><b>姓名：</b></td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td><b>手机：</b></td>
    <td><%= @user.mobile_phone %></td>
  </tr>
  <tr>
    <td><b>角色：</b></td>
    <td>
      <% if @user.admin?  %>
        管理员
      <% else %>
        员工
      <% end %>
    </td>
  </tr>
  <tr>
    <td><b>客户:</b></td>
    <td>共有<%= link_to "#{@user.customers.count}个客户", customers_path %></td>
  </tr>
</table>
