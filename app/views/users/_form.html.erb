<!--[form user]-->
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <div class="form-group">
      <%= f.label :name, "姓名" %>
      <%= f.text_field :name %>
      </div>

      <div class="form-group">
      <%= f.label :mobile_phone, "手机号码" %>
      <%= f.text_field :mobile_phone, placeholder: "请输入11位手机号码" %>
      </div>

      <div class="form-group">
      <%= f.label :password, "密码" %>
      <%= f.password_field :password, placeholder: "请输入6位以上字符" %>
      </div>

      <div class="form-group">
      <%= f.label :password_confirmation, "密码确认" %>
      <%= f.password_field :password_confirmation %>
      </div>
      
      <%= f.submit "提交", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<!--[end form user]-->
