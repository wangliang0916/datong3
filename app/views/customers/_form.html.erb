<!--[form customer]-->
<div class="row">
  <div class="span6 offset3">
    <%= form_for(customer) do |f| %>
      <p>
      <%= f.label :name, "姓名" %>
      <%= f.text_field :name %>
      </p>

      <p>
      <%= f.label :mobile_phone, "手机号码" %>
      <%= f.text_field :mobile_phone %>
      </p>

      <p>
      <%= f.submit btnName, class: "btn btn-large btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
<!--[end form customer]-->
