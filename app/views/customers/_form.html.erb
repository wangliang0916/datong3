<!--[form customer]-->
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@customer) do |f| %>
      <div class="form-group">
      <%= f.label :name, "姓名" %>
      <%= f.text_field :name %>
      </div>

      <div class="form-group">
      <%= f.label :mobile_phone, "手机号码" %>
      <%= f.text_field :mobile_phone %>
      </div>

      <div class="form-group">
      <%= f.submit "提交", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<!--[end form customer]-->
