<% provide(:title, "登录") %>
<h1>登录</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="form-group">
        <%= f.label :mobile_phone, "手机号码"  %>
        <%= f.text_field :mobile_phone %>
      </div>
      <div class="form-group">
        <%= f.label :password, "密码" %>
        <%= f.password_field :password %>
      </div>
      <div class="checkbox">
        <label for="session_remember_me">
          <%= f.check_box :remember_me, checked: true %>记住我 
        </label>
      </div>
      <%= f.submit "登录", class: "btn btn-large btn-primary" %>
    <% end %>

    <div>新用户？<%= link_to "注册", signup_path %></div>
  </div>
</div>
