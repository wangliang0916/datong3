<% provide(:title, "通知列表") %>
<%= render 'shared/customer_menu' %>
<h1>通知列表</h1>
<%= render 'shared/customer' %>
<table class="table table-striped">
  <caption>共有<%= @customer.notifies.count %>个通知事项:
<%= link_to "新建通知事项", new_customer_notify_path(@customer) %></caption>
  <thead>
    <tr>
      <th>通知内容</th>
      <th>通知类型</th>
      <th>通知日期</th>
      <th>通知时间</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @customer.notifies.each do |notify|  %>
    <tr>
      <td><div class="span6 content"><%= notify.content %></div></td>
      <td><%= notify.chinese_name %></td>
      <td><%= notify.date %></td>
      <td><%= notify.time %></td>
      <td>
      <%= link_to "编辑", edit_customer_notify_path(@customer, notify) %>
      <%= link_to "删除", customer_notify_path(@customer, notify), method: 'delete' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
